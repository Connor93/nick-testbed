<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainMenuButtonTextStyle">
        <item name="android:shadowRadius">8.0</item>
        <item name="android:shadowColor">#21BBB7</item>
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="settingsPreferenceSubBox">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/settings_sub_panel_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
    </style>
    <style name="settingsPreferenceSubBoxTextLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="settingsPreferenceSubBoxTitle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="settingsPreferenceSubBoxDescription">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="settingsNavMenuRadioButton">
        <item name="android:background">@drawable/settings_menu_marker</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
</resources>